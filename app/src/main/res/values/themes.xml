<resources>
    <!-- Base application theme. -->
    <style name="Theme.Spotithackfes2k25.Splash" parent="Theme.Material3.DynamicColors.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="windowSplashScreenBackground">#8705FFFC</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/spotit_bg_placeholdet</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>